      WebSocket.__swfLocation = "/swf/WebSocketMain.swf";
    %script{ :type => "text/javascript", :src => "/js/sun.js" }
  %body
    #container
      #header
        .wrapper
          %h1
            %a{ :name => "new_post", :href => "/" } Sun Moon Stars Rain
      #content
        = yield