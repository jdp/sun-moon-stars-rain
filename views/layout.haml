    %title sun moon stars rain
    %link{ :type => "text/css", :media => "screen", :rel => "stylesheet", :href => "/stylesheets/reset.css" }
    %link{ :type => "text/css", :media => "screen", :rel => "stylesheet", :href => "/stylesheets/moon.css" }
